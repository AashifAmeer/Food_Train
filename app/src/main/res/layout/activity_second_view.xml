<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="25dp"
    android:background="@drawable/forgot_password"
    android:layout_height="match_parent"
    tools:context=".userInterface.activities.SecondViewActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_extrabold"
        android:text="Sri Lanka's #1 food delivery app"
        android:textAlignment="center"
        android:textColor="#02061E"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/linear1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.696" />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:background="@drawable/border_radius"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_extrabold"
            android:text="'Order - Eat - Enjoy and Repeat !'"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/slogan"
            android:fontFamily="@font/poppins"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please select an option " />

        <Button
            android:id="@+id/loginLink"
            android:background="@drawable/blue_background_button"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_bold"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:text=" LOGIN " />

        <Button
            android:background="@drawable/blue_background_button"
            android:id="@+id/SingUpLink"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGN UP" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/border_radius"
        android:gravity="center_horizontal"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linear1"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <TextView
            android:textColor="@color/white"
            android:fontFamily="@font/poppins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All rights reserved to "
            />
        <TextView
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Aashif Ameer \u00a9"
            />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>