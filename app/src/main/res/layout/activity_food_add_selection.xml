<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    android:background="@drawable/red_bg"
    tools:context=".userInterface.activities.FoodAddSelectionActivity">

    <TextView
        android:id="@+id/headingOfSelection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select An Option"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/poppins_extrabold"
        android:textSize="25sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="You can add food types by clicking 'Add Food Type'\n and by clicking 'Add Food Item' you can add food lists. "
        android:textAlignment="center"
        android:fontFamily="@font/poppins"
        app:layout_constraintTop_toBottomOf="@+id/headingOfSelection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/red"
        app:cardCornerRadius="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:gravity="center"

            android:orientation="vertical">

            <Button
                android:id="@+id/food_type_btn"
                android:background="@drawable/blue_background_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add A FOOD TYPE" />

            <Button
                android:id="@+id/food_list_btn"
                android:layout_marginTop="10dp"
                android:background="@drawable/blue_background_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD A FOOD LIST" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>